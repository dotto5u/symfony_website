{% extends 'base.html.twig' %}

{% block header %}
    {% include 'partials/_navbar.html.twig' %}
{% endblock %}

{% block main %}
    <main class="mx-6 my-12 sm:mx-36 sm:my-20">
        <div class="flex flex-col mb-12">
            <div class="flex flex-col gap-y-4">
                <p class="text-xl text-fcp-white">Forecast Piano</p>
                <p class="mx-2 text-4xl text-fcp-white">{{ 'title.home.main' | trans }}</p>
            </div>
        </div>

        <div class="flex flex-col gap-y-1">
            <p class="text-base text-fcp-white">{{ 'label.home.main' | trans }}</p>

            <div class="flex justify-start">
                <span><a href="{{ path('app_products_list') }}" class="fcp-button my-10 px-4 py-2">{{ 'label.discover' | trans }}</a></span>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3">
                <div class="h-full p-2 rounded-sm bg-cyan-600">
                    <h2 class="text-fcp-white">{{ 'title' | trans }}</h2>
                    <p class="text-fcp-white">{{ 'desc' | trans }}</p>
                </div>

                <div class="rounded-sm bg-slate-700">
                    <h2 class="">{{ 'title' | trans }}</h2>
                    <p class="">{{ 'desc' | trans }}</p>
                </div>

                <div class="rounded-sm bg-fcp-blue-dark">
                    <h2 class="">{{ 'title' | trans }}</h2>
                    <p class="">{{ 'desc' | trans }}</p>
                </div>
            </div>
        </div>
    </main>
{% endblock %}