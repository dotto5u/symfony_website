<div {{ attributes }}>
  <nav data-controller="nav" class="relative z-20 w-full h-20 px-8 py-6 flex items-center justify-between shadow-lg bg-fcp-blue-dark">
    <div class="z-20 text-lg text-fcp-white font-bold">
      Forecast Piano
    </div>

    <div data-nav-target="navLinks" class="absolute z-10 w-full pt-10 pb-14 left-0 top-12 flex items-center bg-fcp-blue-dark shadow-lg translate-y-[-125%] duration-0 ease-out lg:relative lg:z-20 lg:w-auto lg:py-0 lg:top-0 lg:shadow-none lg:translate-y-[0] lg:duration-0">
      <ul class="flex flex-col items-center px-8 gap-3 bg-fcp-blue-dark lg:flex-row lg:items-center lg:gap-12">
        <li>
          <a href="{{ path('app_home') }}" class="text-lg text-fcp-white hover:font-semibold transition duration-200">
            {{ 'nav.home' | trans }}
          </a>
        </li>
        <li>
          <a href="{{ path('app_products_list') }}" class="text-lg text-fcp-white hover:font-semibold transition duration-200">
            {{ 'nav.products' | trans }}
          </a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
          <li>
            <a href="{{ path('app_admin_dashboard') }}" class="text-lg text-fcp-white hover:font-semibold transition duration-200">
              {{ 'nav.dashboard' | trans }}
            </a>
          </li>
        {% endif %}
        <li class="relative inline-flex items-center">
          <a href="{{ path('app_cart') }}" class="text-lg text-fcp-white hover:font-semibold transition duration-200">
            {{ 'nav.cart' | trans }}
          </a>
          <span class="inline-flex items-center justify-center w-5 h-5 ml-2 text-xs font-bold rounded-full text-fcp-white bg-slate-600">
            {{ cartCount }}
          </span>
        </li>
        <li class="mt-3 lg:mt-0">
            <a href="{{ app.user ? path('app_logout') : path('app_login') }}" class="px-7 py-3 rounded-full text-lg bg-cyan-600 text-fcp-white hover:bg-cyan-700 transition duration-200">
              {{ app.user ? 'nav.sign_out' | trans : 'nav.sign_in' | trans }}
            </a>
        </li>
      </ul>
    </div>

    <div data-action="click->nav#toggle" class="z-20 lg:hidden">
      <span data-nav-target="navMenuIcon">
        {{ ux_icon('ion:menu', { class: 'w-7 h-7 text-fcp-white' }) }}
      </span>
      <span data-nav-target="navCloseIcon" class="hidden">
        {{ ux_icon('ion:close', { class: 'w-7 h-7 text-fcp-white' }) }}
      </span>
    </div>
  </nav>
</div>